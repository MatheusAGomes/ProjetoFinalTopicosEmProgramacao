</head>

<body>
    <div class="container">
        <div class="Menu">
            <div class="logo">
                <img src="/public/img/Reading....svg" id="logo">
            </div>
            <div class="botoes">
                <input type="button" value="Resumo" id="btnAcionarResumo" onclick="location.href = '/DashBord/<%= usuarioID%>'">
                <input type="button" value="Minhas Leituras" id="btnAcionarMinhasLeituras" onclick="location.href = '/DashBord/<%= usuarioID%>/MinhaLeitura'">
                <input type="button" value="Pesquisar Livros" id="btnAcionarPesquisaDeLivros" onclick="location.href = '/MinhaPesquisaComResposta/<%= usuarioID%>/book/'">
                <input type="button" value="Meu Perfil" id="btnMeuPerfil" onclick="location.href = '/DashBord/<%= usuarioID%>/AlterarUsuario/'">
                <input type="button" value="Logout" id="btnLogout" onclick="location.href = '/'">
            </div>
            <h1 id="nomeusuario"><%= NomeDoUsuario %></h1>
        </div>
        <div class="direita">
            <div class="titulo">
                <h1>Adicionar Rotina</h1>
            </div>
            <div class="conteudo">
                <div class="alterarrotina">
                    <div class="infolivro">
                        <form method="POST">          
                            <h1> <%= NomeDoLivro %> </h1>
                            </select>
                        
                    </div>
                    <div class="paginaslidas">
                        <label>Paginas Lidas:</label>
                    </div>
                    <div class="textopaginas">
                        <input type="text" name="paginas">
                    </div>
                    <div class="calendario">
                        <input type="date" name="data">
                    </div>
                    <div class="botaosubmit">
                        <input type="submit" value="Adicionar Rotina">
                        <input type="button" value="Voltar" id="btnAcionarMinhasLeituras" onclick="location.href = '/DashBord/<%= usuarioID%>/MinhaLeitura'">
                    </div>
                </form>
                </div>
            </div>
        </div>
    </div>
</body>

</html>